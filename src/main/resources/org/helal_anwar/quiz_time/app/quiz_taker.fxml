<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_RIGHT" prefHeight="550.0" prefWidth="400.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.helal_anwar.quiz_time.app.QuizTaker">
   <children>
      <ScrollPane fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS">
         <content>
            <VBox fx:id="question_box" spacing="15.0">
               <children>
                  <VBox id="data_viewer" spacing="15.0" stylesheets="@root_style.css">
                     <children>
                        <Label fx:id="questionLabel" style="-fx-font-size: 18px;" text="What is Lorem Ipsum?&#10;Lorem Ipsum is simply dummy&#10;text of the printing and &#10;typesetting industry." wrapText="true" />
                        <VBox spacing="15.0">
                           <children>
                              <RadioButton fx:id="optionA">
                                 <toggleGroup>
                                    <ToggleGroup fx:id="optionsGroup" />
                                 </toggleGroup>
                              </RadioButton>
                              <RadioButton fx:id="optionB" toggleGroup="$optionsGroup" />
                              <RadioButton fx:id="optionC" toggleGroup="$optionsGroup" />
                              <RadioButton fx:id="optionD" toggleGroup="$optionsGroup" />
                           </children>
                        </VBox>
                        <HBox spacing="10.0">
                           <children>
                              <Button text="Submit Answer" />
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </VBox>
                  <HBox alignment="CENTER_RIGHT">
                     <children>
                        <Button mnemonicParsing="false" onAction="#previous" text="Previous" />
                        <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                           <children>
                              <Button maxWidth="61.0" minWidth="61.0" mnemonicParsing="false" onAction="#next" text="Next" />
                           </children>
                        </HBox>
                     </children>
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
         </content>
      </ScrollPane>
      <VBox alignment="BOTTOM_CENTER" maxHeight="70.0" VBox.vgrow="ALWAYS">
         <children>
            <HBox alignment="CENTER" fillHeight="false" maxHeight="70.0" spacing="20.0">
               <children>
                  <Button fx:id="quit" contentDisplay="CENTER" maxHeight="40.0" maxWidth="40.0" minHeight="40.0" minWidth="40.0" mnemonicParsing="false" onAction="#onClose" style="-fx-border-radius: 20; -fx-background-radius: 20;">
                     <graphic>
                        <ImageView>
                           <image>
                              <Image url="@close.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button fx:id="reset" contentDisplay="CENTER" maxHeight="40.0" maxWidth="40.0" minHeight="40.0" minWidth="40.0" mnemonicParsing="false" style="-fx-border-radius: 20; -fx-background-radius: 20;">
                     <graphic>
                        <ImageView>
                           <image>
                              <Image url="@add.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </children>
            </HBox>
            <Label fx:id="timerLabel2" style="-fx-font-size: 16px; -fx-text-fill: red;" />
         </children>
      </VBox>
   </children>
</VBox>
