<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox id="data_viewer" alignment="TOP_RIGHT" spacing="30.0" stylesheets="@root_style.css" xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.helal_anwar.quiz_time.app.Overview">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <ImageView fitHeight="24.0" fitWidth="24.0" onMouseClicked="#onClose" pickOnBounds="true" preserveRatio="true">
      <image>
         <Image url="@close_black.png" />
      </image>
   </ImageView>
    <HBox alignment="CENTER" spacing="10.0">
        <Label id="title" text="Quiz Overview" />
    </HBox>
    <HBox id="other_text" alignment="CENTER" spacing="10.0">
        <Label text="Score" />
        <Label fx:id="score" />
    </HBox>
    <HBox id="other_text" alignment="CENTER_LEFT" spacing="10.0">
        <Label text="Total correct answer" />
        <Label fx:id="correct" />
    </HBox>
    <HBox id="other_text" alignment="CENTER_LEFT" spacing="10.0">
        <Label text="Total wrong answer" />
        <Label fx:id="wrong" />
    </HBox>
    <HBox id="other_text" alignment="CENTER_LEFT" spacing="10.0">
        <Label fx:id="duration" text="Total duration" />
        <Label />
    </HBox>
</VBox>
