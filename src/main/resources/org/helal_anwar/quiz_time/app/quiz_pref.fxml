<?xml version="1.0" encoding="UTF-8"?>

<?import atlantafx.base.controls.CustomTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox id="box" alignment="CENTER" maxHeight="270.0" maxWidth="320.0" minHeight="270.0" minWidth="320.0" stylesheets="@pref.css" xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.helal_anwar.quiz_time.app.QuizPref">
   <children>
      <Label id="title" text="Create Quiz">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </Label>
      <GridPane alignment="CENTER" hgap="50.0" vgap="20.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <CustomTextField fx:id="name" promptText="Quiz Name" GridPane.valignment="CENTER" />
            <Spinner fx:id="no_question" GridPane.columnIndex="1" GridPane.valignment="CENTER" />
            <ComboBox fx:id="category_list" prefWidth="150.0" promptText="Category" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
            <ComboBox fx:id="level" prefWidth="150.0" promptText="Difficulty" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
            <ComboBox fx:id="type" prefWidth="150.0" promptText="Type" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </GridPane>
      <HBox alignment="BOTTOM_RIGHT" spacing="20.0">
         <children>
            <Button mnemonicParsing="false" onAction="#cancel" text="Cancel" textAlignment="CENTER" />
            <Button mnemonicParsing="false" onAction="#apply" text="Apply " />
         </children>
         <VBox.margin>
            <Insets bottom="15.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
